# Create a new Next.js project
npx create-next-app@latest manifestation-board
cd manifestation-board

# Install additional dependencies
npm install next-auth axios react-dnd recharts @prisma/client
npm install -D prisma typescript @types/react

npx prisma migrate dev --name init

npm install -D tailwindcss postcss autoprefixer
npx tailwindcss init -p

npm install zod axios recharts

npm install react-hot-toast

npm install @prisma/client \
            @next-auth/prisma-adapter \
            framer-motion \
            react-icons \
            zod \
            @hookform/resolvers \
            react-hook-form \
            next-themes \
            axios \
            recharts

# Install dev dependencies
npm install -D prisma \
              @types/node \
              typescript \
              eslint
